<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewGroup">

    <TextView
        android:id="@+id/newGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Group"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/New_Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_name"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:hint="group name"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_below="@id/newGroup"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_desc"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:hint="group description"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_below="@id/group_name"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_members"
        android:text="Add Group Members"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:layout_below="@id/group_desc"
        android:textStyle="bold"
        android:textSize="12sp"
        android:onClick="addGroupMembers"
        android:background="@color/Sapphire_Blue"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createG_btn"
        android:text="create"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:layout_below="@id/add_members"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@color/Sapphire_Blue"
        />



</RelativeLayout>